<Window x:Class="DevDumps.Pats.Apps.PatsViewer.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:regions="http://www.codeplex.com/CompositeWPF"
        xmlns:regions1="clr-namespace:DevDumps.Pats.Apps.PatsViewer.Regions"
        Title="PATS" Style="{StaticResource ResourceKey=WindowSkinStyle}"
        Icon="Resources\Logo.ico">  
    
    <Grid>
 <Grid.Resources>
           
        </Grid.Resources>        
        
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <StackPanel regions:RegionManager.RegionName="{x:Static regions1:RegionName.MainMenuRegionName}"></StackPanel>    
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel regions:RegionManager.RegionName="{x:Static regions1:RegionName.ContentRegionName}"></StackPanel>
        </Grid>


    </Grid>
</Window>
