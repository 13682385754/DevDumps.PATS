<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/DevDumps.WPFSDK.Styles;component/Themes/ThemeStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
  <!-- Window style-->
    <Style x:Key="StandardPanelStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource ResourceKey=StandardPanelBrush}"></Setter>
       <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="CornerRadius" Value="2"></Setter>
        <Setter Property="BorderBrush" Value="LightGray"></Setter>        
        <Setter Property="Padding" Value="2"></Setter>
  </Style>

</ResourceDictionary>